{
  "name": "zandome-web",
  "type": "module",
  "version": "0.1.0",
  "engines": {
    "node": "22.x"
  },
  "license": "MIT",
  "author": "Miguel Mendoza",
  "description": "Miguel Mendoza Portfolio Web",
  "release": {
    "branch": "main",
    "tag": true
  },
  "contributors": [
    {
      "name": "Miguel Mendoza",
      "email": "miguel@zandome.com",
      "url": "https://zandome.com"
    }
  ],
  "packageManager": "bun@1.2.10",
  "scripts": {
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "format:check:all": "prettier --check .",
    "format:check:staged": "prettier --check ",
    "format:fix:all": "prettier --write .",
    "format:ci": "prettier --check .",
    "lint:check:all": "eslint .",
    "lint:check:staged": "eslint ",
    "lint:fix:all": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings 0",
    "deps:update": "bunx npm-check-updates --interactive --format group",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@astrojs/partytown": "2.1.4",
    "@astrojs/react": "4.2.5",
    "@astrojs/sitemap": "3.3.1",
    "@astrojs/tailwind": "5.0.4",
    "@astrojs/vercel": "8.1.4",
    "@tabler/icons-react": "2.44.0",
    "@tailwindcss/vite": "4.1.4",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "@vercel/speed-insights": "1.2.0",
    "astro": "5.7.5",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "3.2.0",
    "tailwindcss": "4.1.4",
    "vanilla-cookieconsent": "3.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@eslint/js": "9.26.0",
    "@typescript-eslint/eslint-plugin": "8.32.0",
    "@typescript-eslint/parser": "8.32.0",
    "bun-types": "1.2.10",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-unused-imports": "4.1.4",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.2",
    "prettier": "3.5.3",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.11",
    "typescript": "5.8.3",
    "typescript-eslint": "8.32.0"
  }
