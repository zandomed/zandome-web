---
import '@fontsource/poppins'
import '@styles/global.css'

import GoogleAnalytics from '../components/GoogleAnalytics.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <meta name='generator' content={Astro.generator} />

    <!-- HTML Meta Tags -->
    <title>{title}</title>
    <meta name='description' content='Miguel Mendoza Portfolio' />

    <!-- Facebook Meta Tags -->
    <meta property='og:url' content='https://zandome.com' />
    <meta property='og:type' content='website' />
    <meta property='og:title' content='Zandome' />
    <meta property='og:description' content='Miguel Mendoza Portfolio' />
    <meta property='og:image' content='/zandome-og-bg.png' />

    <!-- Twitter Meta Tags -->
    <meta name='twitter:card' content='summary_large_image' />
    <meta property='twitter:domain' content='zandome.com' />
    <meta property='twitter:url' content='https://zandome.com' />
    <meta name='twitter:title' content='Zandome' />
    <meta name='twitter:description' content='Miguel Mendoza Portfolio' />
    <meta name='twitter:image' content='/zandome-og-bg.png' />

    <GoogleAnalytics />
  </head>
  <body>
    <main class='h-full'>
      <slot />
    </main>
  </body>
</html>
