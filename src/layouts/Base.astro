---
import '@/styles/global.css';

import Footer from '@/components/Footer.astro';
import Head from '@/components/Head.astro';
import Header from '@/components/Header.astro';

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <Head title={title} />
  </head>
  <body class="">
    <Header />
    <main class="">
      <slot />
    </main>
    <Footer />
  </body>
</html>
