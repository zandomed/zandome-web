---
import '@/styles/global.css';

import SpeedInsights from '@vercel/speed-insights/astro';

import Analytics from '@/components/Analytics.astro';
import Button from '@/components/Button.astro';
import Header from '@/components/Header.astro';
import { version } from '@/package';

const COPYRIGHT_YEAR = new Date().getFullYear();
const AUTHOR = 'Miguel Mendoza';
const DESCRIPTION =
  "I'm Miguel Mendoza, Full Stack Developer, here in my Portfolio I will show you my projects, strengths, skills and how to get in touch with me.";
const THEME_COLOR = '#00202a';
---

<html lang="en">
  <head>
    <!-- General -->
    <title>Miguel Mendoza Curriculum</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={DESCRIPTION} />
    <meta name="author" content={AUTHOR} />
    <meta name="copyright" content={`Copyright Â©${COPYRIGHT_YEAR} ${AUTHOR}`} />
    <meta name="keywords" content="Miguel Mendoza, Full Stack Developer, Portfolio" />
    <meta name="robots" content="index, follow" />
    <meta name="version" content={version} />

    <!-- Icons and Links -->
    <link
      rel="icon"
      type="image/x-icon"
      media="(prefers-color-scheme: light)"
      href="/favicon.ico"
    />
    <link rel="icon" type="image/x-icon" media="(prefers-color-scheme: dark)" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href="http://zandome.com" />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://zandome.com" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Zandome" />
    <meta property="og:description" content={DESCRIPTION} />
    <meta property="og:image" content="/zandome-og-bg.png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="zandome.com" />
    <meta property="twitter:url" content="https://zandome.com" />
    <meta name="twitter:title" content="Zandome" />
    <meta name="twitter:description" content={DESCRIPTION} />
    <meta name="twitter:image" content="/zandome-og-bg.png" />

    <!-- Theme -->
    <meta name="theme-name" content="zandome" />
    <meta name="msapplication-TileColor" content={THEME_COLOR} />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content={THEME_COLOR} />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content={THEME_COLOR} />
    <Analytics />
    <SpeedInsights />
  </head>
  <body class="relative h-full w-full bg-background print:bg-white print:text-black">
    <div class="print:hidden">
      <Header />
    </div>
    <main class="mx-auto h-full max-w-4xl p-10 not-print:pt-25">
      <slot />
    </main>
    <div class="fixed right-5 bottom-5 print:hidden">
      <Button id="btn:download:cv" download="miguel-mendoza-cv.pdf" href="/cv.pdf">
        Donwload CV
      </Button>
    </div>
  </body>
</html>
